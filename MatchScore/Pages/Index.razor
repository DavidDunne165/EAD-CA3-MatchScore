                                                                    <img src="@teamStats.Team?.Logo" alt="@teamStats.Team?.Name Logo" />
                                                                    <h5>@teamStats.Team?.Name</h5>
                                                                    @foreach (var stat in teamStats.Statistics)
                                                                    {
